{
  "name": "combine-for-ai",
  "displayName": "Combine files for AI",
  "description": "Combines selected files into the clipboard for AI prompts.",
  "version": "0.2.0",
  "publisher": "mirkogee",
  "icon": "images/combine-files-for-ai.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirkogeest/combine-for-ai.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:combine-for-ai.combine",
    "onCommand:combine-for-ai.combineSourceControl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "combine-for-ai.combine",
        "title": "Combine for AI"
      },
      {
        "command": "combine-for-ai.combineSourceControl",
        "title": "Combine for AI"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "combine-for-ai.combine",
          "when": "resourceScheme == 'file'",
          "group": "9_cutcopypaste@1"
        }
      ],
      "scm/title": [
        {
          "command": "combine-for-ai.combineSourceControl",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "combine-for-ai.combine",
          "when": "false"
        },
        {
          "command": "combine-for-ai.combineSourceControl"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  }
}